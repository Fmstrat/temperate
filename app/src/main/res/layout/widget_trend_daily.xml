    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_trend_daily"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:theme="@style/TemperateWeatherTheme">

    <nowsci.com.temperateweather.remoteviews.trend.WidgetItemView
        android:id="@+id/widget_trend_daily_item_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <nowsci.com.temperateweather.remoteviews.trend.WidgetItemView
        android:id="@+id/widget_trend_daily_item_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <nowsci.com.temperateweather.remoteviews.trend.WidgetItemView
        android:id="@+id/widget_trend_daily_item_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <nowsci.com.temperateweather.remoteviews.trend.WidgetItemView
        android:id="@+id/widget_trend_daily_item_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <nowsci.com.temperateweather.remoteviews.trend.WidgetItemView
        android:id="@+id/widget_trend_daily_item_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</nowsci.com.temperateweather.remoteviews.trend.TrendLinearLayout>